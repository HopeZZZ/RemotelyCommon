<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp400"
    android:layout_marginLeft="@dimen/dp20"
    android:layout_marginRight="@dimen/dp30"
    android:background="@mipmap/base_bg_privacy"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp60"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp6"
                android:text="欢迎您使用爱玩宝APP，请您充分阅读并理解隐私政策和用户协议："
                android:textColor="@color/base_color_404050"
                android:textSize="@dimen/dp14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp12"
                android:layout_marginRight="@dimen/dp16"
                android:background="#E4E4E4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp11"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/dp21"
                android:paddingRight="@dimen/dp21"
                android:text="@string/protocol"
                android:textColor="#3F3E4C"
                android:textSize="@dimen/dp14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_define"
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@drawable/base_btn_again"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="@dimen/dp18" />

        <TextView
            android:id="@+id/tv_quit"
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp16"
            android:background="@drawable/base_btn_again"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp20"
            android:text="退出APP"
            android:textColor="@color/white"
            android:textSize="@dimen/dp18" />

    </LinearLayout>




</LinearLayout>