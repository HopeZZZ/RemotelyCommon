<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp290"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp22"
        android:gravity="center_horizontal"
        android:text="发布须知"
        android:textColor="@color/base_color_333333"
        android:textSize="@dimen/dp18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/dp24"
        android:lineSpacingExtra="5dp"
        android:text="爱玩宝鼓励原创作品，包含以下行为的作品将不会被审核通过：\n1. 发布虐待珍稀野生动物的视频；\n2. 发布侵害他人隐私的视频；\n3. 发布低俗视频；\n4. 发布有损国家荣誉的视频；\n5. 发布虚假消息；\n6. 发布邪教或者封建迷信视频。"
        android:textColor="@color/base_color_666666"
        android:textSize="@dimen/dp14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/base_color_2cabf3"
        android:textSize="@dimen/dp18"
        android:textStyle="bold" />
</LinearLayout>