<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_15"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="温馨提示"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dp18"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp93"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp5"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:text="确定删除"
        android:textColor="@color/base_color_333333"
        android:textSize="@dimen/dp16" />

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48">

        <TextView
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/base_color_666666"
            android:textSize="@dimen/dp16"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/base_color_F1F1F" />

        <TextView
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/base_color_2ca8f3"
            android:textSize="@dimen/dp16"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>